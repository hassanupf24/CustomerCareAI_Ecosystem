# CustomerCareAI Ecosystem â€” Environment Configuration
# =====================================================

# --- Application ---
APP_NAME=CustomerCareAI_Ecosystem
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# --- API Server ---
HOST=0.0.0.0
PORT=8000
WORKERS=1

# --- Database ---
DATABASE_URL=sqlite+aiosqlite:///./customercareai.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/customercareai

# --- FAISS Index ---
FAISS_INDEX_DIR=./data/faiss_indices

# --- Model Paths ---
INTENT_MODEL_NAME=distilbert-base-uncased
EMOTION_MODEL_NAME=j-hartmann/emotion-english-distilroberta-base
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# --- Escalation Thresholds ---
SENTIMENT_ESCALATION_THRESHOLD=-0.65
CONSECUTIVE_EMOTION_TURNS=2
MAX_UNRESOLVED_TURNS=3

# --- Translation ---
TRANSLATION_ENABLED=true
SUPPORTED_LANGUAGES=en,ar

# --- Inter-Agent Communication ---
OCS_SERVICE_URL=http://localhost:8001
KFO_SERVICE_URL=http://localhost:8002
EIA_SERVICE_URL=http://localhost:8003
PIR_SERVICE_URL=http://localhost:8004
FAN_SERVICE_URL=http://localhost:8005
